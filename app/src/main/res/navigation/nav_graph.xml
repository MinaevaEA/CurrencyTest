<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/registrationFragment"
    tools:ignore="InvalidNavigation">

    <fragment
        android:id="@+id/mainFragment"
        android:name="com.example.currencytest.MainFragment"
        android:label="fragment_main"
        tools:layout="@layout/fragment_main" />
    <fragment
        android:id="@+id/buyCurrencyListFragment"
        android:name="com.example.currencytest.currency_buy.BuyCurrencyListFragment"
        android:label="fragment_buy_currency_list"
        tools:layout="@layout/fragment_buy_currency_list" />
    <fragment
        android:id="@+id/currencyListFragment"
        android:name="com.example.currencytest.currency_list.CurrencyListFragment"
        android:label="CurrencyListFragment">
        <action
            android:id="@+id/action_currency_list_to_about"
            app:destination="@id/fragment_about_currency" />
    </fragment>
    <fragment
        android:id="@+id/registrationFragment"
        android:name="com.example.currencytest.RegistrationFragment"
        android:label="fragment_registration"
        tools:layout="@layout/fragment_registration" />
    <fragment
        android:id="@+id/fragment_about_currency"
        android:name="com.example.currencytest.currency.CurrencyFragment"
        android:label="CurrencyFragment"

       />

</navigation>